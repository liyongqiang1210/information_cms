<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maven.dao.ResourceDao">

	<!-- 查询全部 -->
	<select id="findAll" resultType="com.maven.entity.Resource">
		select * from sys_resource
	</select>

	<!-- 根据资源id查询权限信息 -->
	<select id="findPermissionById" parameterType="int" resultType="string">
		select permission from sys_resource where id = #{id}
	</select>

	<!-- 创建 -->
	<insert id="createResource" parameterType="com.maven.entity.Resource"
		useGeneratedKeys="true" keyProperty="id">
		insert into sys_resource
		(name,url,type,permission,available)values(#{name},#{url},#{type},#{permission},#{available})
	</insert>

	<!-- 更新 -->
	<update id="updateResource" parameterType="com.maven.entity.Resource">
		update sys_resource
		set name = #{name},url = #{url},type = #{type}, permission =
		#{permission} where id = #{id}
	</update>

	<!-- 删除 -->
	<delete id="deleteResource" parameterType="int">
		delete from
		sys_resource where id = #{id}
	</delete>

	<!-- 根据权限名称查询 -->
	<select id="findResourceByName" parameterType="com.maven.entity.Resource"
		resultType="com.maven.entity.Resource">
		select * from sys_resource where 1=1
		<if test="name!=null">
			and name like CONCAT(CONCAT('%', #{name}),'%');
		</if>
	</select>
</mapper>